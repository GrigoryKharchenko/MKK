<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MKK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MKK.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Text" />

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.White.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.White.8">
        <item name="android:textSize">@dimen/sp_8</item>
    </style>

</resources>
