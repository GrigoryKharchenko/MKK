    <style name="IconButtonWhite" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/sp_8</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textColor">@color/teal_basic</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/teal_basic</item>
        <item name="strokeWidth">@dimen/dp_1</item>
    </style>

    <style name="PaymentButton">
        <item name="android:background">@drawable/custom_button_ripple</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="ButtonWithTopIcon">
