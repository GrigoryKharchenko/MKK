    <style name="WhiteBackgroundLayout" parent="Theme.MKK">
        <item name="android:background">@color/white</item>
    </style>

    <style name="WaterBackgroundLayout" parent="Theme.MKK">
        <item name="android:background">@color/water</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/gray_alpha_30</item>
    </style>

    <style name="OutlinedTealBasicButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/sp_8</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="background">@color/teal_basic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="OutlinedWhiteButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/sp_8</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:textColor">@color/teal_basic</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/teal_basic</item>
        <item name="strokeWidth">@dimen/dp_1</item>
    </style>

    <style name="OutlinedRedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
