<resources>
    <!-- Base application theme. -->
    <style name="Theme.MKK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MKK.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen_background_gradient_color
        </item>
    </style>

    <style name="Text" />

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.White.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.White.8">
        <item name="android:textSize">@dimen/sp_8</item>
    </style>

    <style name="Text.TealDark">
        <item name="android:textColor">@color/teal_dark</item>
    </style>

    <style name="Text.TealDark.30">
        <item name="android:textSize">@dimen/sp_30</item>
    </style>

    <style name="Text.TealBasic">
        <item name="android:textColor">@color/teal_basic</item>
    </style>

    <style name="Text.TealBasic.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.TealBasic.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black.20">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="Text.Black.20.Title">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Gray.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="WhiteBackgroundLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TealBasicButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="background">@color/teal_basic</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/sp_8</item>
    </style>

    <style name="TealBasicButton.TextSize14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TealBasicButton.TextSize16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/gray_alfa_30</item>
    </style>

    <style name="WhiteButtonTextColorTealBasic" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/teal_basic</item>
        <item name="cornerRadius">@dimen/sp_8</item>
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">@dimen/dp_1</item>
        <item name="strokeColor">@color/teal_basic</item>
    </style>

    <style name="WhiteButtonTextColorTealBasic.TextSize16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

</resources>
