    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black.16.Bold">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Black.20">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="Text.Black.20.Title">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.LightGray">
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Text.LightGray.12">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.DarkGray">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Text.DarkGray.12">
        <item name="android:textSize">@dimen/sp_12</item>
